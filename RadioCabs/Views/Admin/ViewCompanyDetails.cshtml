@model Company
@{
    ViewData["Title"] = "Company Details";
}

<style>
    body {
        background: linear-gradient(to right, #f4f6f9, #eef2f7);
    }

    .premium-header {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        padding: 30px;
        border-radius: 22px;
        color: white;
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        margin-bottom: 30px;
    }

    .premium-card {
        border: none;
        border-radius: 22px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        padding: 30px;
        transition: 0.3s ease;
    }

        .premium-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
        }

    .detail-label {
        font-weight: 600;
        color: #243B55;
    }

    .detail-value {
        color: #555;
    }

    .badge {
        padding: 6px 14px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 500;
    }

    .membership-badge {
        background: #007bff;
        color: white;
    }

    .payment-box {
        background: #f1f5ff;
        padding: 20px;
        border-radius: 14px;
        margin-top: 20px;
    }

    .btn {
        border-radius: 10px;
        padding: 8px 18px;
        transition: 0.25s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>

<div class="premium-header d-flex justify-content-between align-items-center">
    <div>
        <h2 class="mb-1">Company Details</h2>
        <small>Complete information about this company</small>
    </div>
    <a asp-action="ManageCompanies" class="btn btn-light">
        ← Back to Manage Companies
    </a>
</div>

<div class="premium-card">
    <div class="row">
        <div class="col-md-6 mb-3">
            <span class="detail-label">Company Name:</span><br />
            <span class="detail-value">@Model.CompanyName</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Company ID:</span><br />
            <span class="detail-value">@Model.CompanyUniqueId</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Email:</span><br />
            <span class="detail-value">@Model.Email</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Contact Person:</span><br />
            <span class="detail-value">@(Model.ContactPerson ?? "-")</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Designation:</span><br />
            <span class="detail-value">@(Model.Designation ?? "-")</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Mobile:</span><br />
            <span class="detail-value">@(Model.Mobile ?? "-")</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Telephone:</span><br />
            <span class="detail-value">@(Model.Telephone ?? "-")</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Fax Number:</span><br />
            <span class="detail-value">@(Model.FaxNumber ?? "-")</span>
        </div>

        <div class="col-md-12 mb-3">
            <span class="detail-label">Address:</span><br />
            <span class="detail-value">@(Model.Address ?? "-")</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Membership Type:</span><br />
            <span class="badge membership-badge">@Model.MembershipType</span>
        </div>

        <div class="col-md-6 mb-3">
            <span class="detail-label">Payment Type:</span><br />
            <span class="detail-value">@Model.PaymentType</span>
        </div>
    </div>

    <div class="payment-box">
        <div class="row">
            <div class="col-md-6">
                <span class="detail-label">Payment Status:</span><br />
                <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                    @(Model.PaymentStatus ?? "Pending")
                </span>
            </div>

            <div class="col-md-6">
                <span class="detail-label">Payment Amount:</span><br />
                <strong>$@Model.PaymentAmount</strong>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a asp-action="EditCompany"
       asp-route-id="@Model.CompanyId"
       class="btn btn-warning">
        Edit Company
    </a>

    <form asp-action="DeleteCompany"
          asp-route-id="@Model.CompanyId"
          method="post"
          onsubmit="return confirm('Delete this company?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">
            Delete Company
        </button>
    </form>
</div>
