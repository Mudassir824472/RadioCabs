@model Company
@{
    ViewData["Title"] = "Company Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Company Details</h2>
    <a asp-action="ManageCompanies" class="btn btn-secondary">Back to Manage Companies</a>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Company Name</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>

            <dt class="col-sm-3">Company ID</dt>
            <dd class="col-sm-9">@Model.CompanyUniqueId</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Contact Person</dt>
            <dd class="col-sm-9">@(Model.ContactPerson ?? "-")</dd>

            <dt class="col-sm-3">Designation</dt>
            <dd class="col-sm-9">@(Model.Designation ?? "-")</dd>

            <dt class="col-sm-3">Mobile</dt>
            <dd class="col-sm-9">@(Model.Mobile ?? "-")</dd>

            <dt class="col-sm-3">Telephone</dt>
            <dd class="col-sm-9">@(Model.Telephone ?? "-")</dd>

            <dt class="col-sm-3">Fax Number</dt>
            <dd class="col-sm-9">@(Model.FaxNumber ?? "-")</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@(Model.Address ?? "-")</dd>

            <dt class="col-sm-3">Membership Type</dt>
            <dd class="col-sm-9">@Model.MembershipType</dd>

            <dt class="col-sm-3">Payment Type</dt>
            <dd class="col-sm-9">@Model.PaymentType</dd>

            <dt class="col-sm-3">Payment Status</dt>
            <dd class="col-sm-9">@(Model.PaymentStatus ?? "Pending")</dd>

            <dt class="col-sm-3">Payment Amount</dt>
            <dd class="col-sm-9">@Model.PaymentAmount</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="EditCompany" asp-route-id="@Model.CompanyId" class="btn btn-warning">Edit Company</a>
    <form asp-action="DeleteCompany" asp-route-id="@Model.CompanyId" method="post" onsubmit="return confirm('Delete this company?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Company</button>
    </form>
</div>
