@model Advertisement
@{
    ViewData["Title"] = "Advertisement Details";
}

<style>
    body {
        background: linear-gradient(to right, #f4f6f9, #eef2f7);
    }

    .premium-header {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        padding: 30px;
        border-radius: 22px;
        color: white;
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        margin-bottom: 30px;
    }

    .premium-card {
        border: none;
        border-radius: 22px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        padding: 30px;
        transition: 0.3s ease;
    }

        .premium-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
        }

    .detail-label {
        font-weight: 600;
        color: #243B55;
    }

    .detail-value {
        color: #555;
    }

    .payment-box {
        background: #f1f5ff;
        padding: 15px 20px;
        border-radius: 12px;
        margin-top: 15px;
    }

    .badge {
        padding: 6px 14px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 500;
    }

    .btn {
        border-radius: 10px;
        padding: 8px 18px;
        transition: 0.25s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>

<div class="premium-header d-flex justify-content-between align-items-center">
    <div>
        <h2 class="mb-1">Advertisement Details</h2>
        <small>Complete information about this advertisement</small>
    </div>
    <a asp-action="ManageAdvertisements" class="btn btn-light">
        ← Back to Manage Advertisements
    </a>
</div>

<div class="premium-card">
    <div class="row mb-3">
        <div class="col-md-6">
            <p>
                <span class="detail-label">Company Name:</span><br />
                <span class="detail-value">@(Model.CompanyName ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Designation:</span><br />
                <span class="detail-value">@(Model.Designation ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Address:</span><br />
                <span class="detail-value">@(Model.Address ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Mobile:</span><br />
                <span class="detail-value">@(Model.Mobile ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Telephone:</span><br />
                <span class="detail-value">@(Model.Telephone ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Fax Number:</span><br />
                <span class="detail-value">@(Model.FaxNumber ?? "-")</span>
            </p>
        </div>

        <div class="col-md-6">
            <p>
                <span class="detail-label">Email:</span><br />
                <span class="detail-value">@(Model.Email ?? "-")</span>
            </p>
        </div>

        <div class="col-md-12">
            <p>
                <span class="detail-label">Description:</span><br />
                <span class="detail-value">@(Model.Description ?? "-")</span>
            </p>
        </div>
    </div>

    <div class="payment-box">
        <div class="row">
            <div class="col-md-4">
                <p>
                    <span class="detail-label">Payment Type:</span><br />
                    <span class="detail-value">@(Model.PaymentType ?? "Monthly")</span>
                </p>
            </div>

            <div class="col-md-4">
                <p>
                    <span class="detail-label">Payment Status:</span><br />
                    <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                        @(Model.PaymentStatus ?? "Pending")
                    </span>
                </p>
            </div>

            <div class="col-md-4">
                <p>
                    <span class="detail-label">Payment Amount:</span><br />
                    <strong>$@Model.PaymentAmount</strong>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a asp-action="EditAdvertisement"
       asp-route-id="@Model.AdvertisementId"
       class="btn btn-warning">
        Edit Advertisement
    </a>

    <form asp-action="DeleteAdvertisement"
          asp-route-id="@Model.AdvertisementId"
          method="post"
          onsubmit="return confirm('Delete this advertisement?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">
            Delete Advertisement
        </button>
    </form>
</div>
