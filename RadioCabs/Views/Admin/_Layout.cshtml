<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - RadioCabs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Navigation -->
@if (!Context.Request.Path.Value.ToLower().Contains("/admin/login"))
            {
                <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="sidebar-sticky pt-3">
                    <h5 class="sidebar-heading px-3 mt-4 mb-1 text-muted">Admin Panel</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ManageCompanies">Companies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ManageDrivers">Drivers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ManageAdvertisements">Advertisements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ManageFeedbacks">Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/ManagePayments">Payments</a>
                        </li>
                        <hr class="my-3" />
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
            }
            <!-- Main Content -->
            <main role="main" class="@(Context.Request.Path.Value.ToLower().Contains("/admin/login")
                                  ? "col-12 d-flex justify-content-center align-items-center vh-100"
                                  : "col-md-9 ml-sm-auto col-lg-10 px-4 py-4")">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>