@model Driver
@{
    ViewData["Title"] = "Edit Driver";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Edit Driver</h2>
    <a asp-action="ManageDrivers" class="btn btn-secondary">Back to Manage Drivers</a>
</div>

<form asp-action="EditDriver" asp-route-id="@Model.DriverId" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="DriverId" type="hidden" />
    <input asp-for="DriverUniqueId" type="hidden" />
    <input asp-for="Password" type="hidden" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DriverName" class="form-label"></label>
                    <input asp-for="DriverName" class="form-control" />
                    <span asp-validation-for="DriverName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Driver ID</label>
                    <input class="form-control" value="@Model.DriverUniqueId" readonly />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ContactPerson" class="form-label"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Mobile" class="form-label"></label>
                    <input asp-for="Mobile" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telephone" class="form-label"></label>
                    <input asp-for="Telephone" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Experience" class="form-label"></label>
                    <input asp-for="Experience" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PaymentType" class="form-label"></label>
                    <select asp-for="PaymentType" class="form-control">
                        <option value="">-- Select Payment Type --</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Yearly">Yearly</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PaymentStatus" class="form-label"></label>
                    <select asp-for="PaymentStatus" class="form-control">
                        <option value="Pending">Pending</option>
                        <option value="Paid">Paid</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="ViewDriverDetails" asp-route-id="@Model.DriverId" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
