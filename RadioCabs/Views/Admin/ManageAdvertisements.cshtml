@model IEnumerable<Advertisement>
@{
    ViewData["Title"] = "Manage Advertisements";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Manage Advertisements</h2>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card">
    <div class="table-responsive">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Payment Type</th>
                    <th>Payment Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">No advertisements found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@(advertisement.CompanyName ?? "-")</td>
                            <td>@(advertisement.Email ?? "-")</td>
                            <td>@(advertisement.Mobile ?? "-")</td>
                            <td>@(advertisement.PaymentType ?? "Monthly")</td>
                            <td>
                                <span class="badge @(advertisement.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                                    @(advertisement.PaymentStatus ?? "Pending")
                                </span>
                            </td>
                            <td class="d-flex gap-1">
                                <a asp-action="ViewAdvertisementDetails" asp-route-id="@advertisement.AdvertisementId" class="btn btn-sm btn-info">View</a>
                                <a asp-action="EditAdvertisement" asp-route-id="@advertisement.AdvertisementId" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="DeleteAdvertisement" asp-route-id="@advertisement.AdvertisementId" method="post" onsubmit="return confirm('Delete this advertisement?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
