@model Driver
@{
    ViewData["Title"] = "Driver Details";
}

<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">🚗 Driver Details</h2>
            <small class="text-muted">Complete driver information overview</small>
        </div>
        <a asp-action="ManageDrivers" class="btn btn-outline-secondary">
            ← Back to Manage Drivers
        </a>
    </div>

    <!-- Main Card -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h5 class="mb-0">@Model.DriverName</h5>
        </div>

        <div class="card-body p-4">

            <div class="row g-3">

                <div class="col-md-6">
                    <strong>Driver Unique ID:</strong><br />
                    <span class="text-muted">@Model.DriverUniqueId</span>
                </div>

                <div class="col-md-6">
                    <strong>Contact Person:</strong><br />
                    <span class="text-muted">@(Model.ContactPerson ?? "-")</span>
                </div>

                <div class="col-md-6">
                    <strong>Email:</strong><br />
                    <span class="text-muted">@(Model.Email ?? "-")</span>
                </div>

                <div class="col-md-6">
                    <strong>Mobile:</strong><br />
                    <span class="text-muted">@(Model.Mobile ?? "-")</span>
                </div>

                <div class="col-md-6">
                    <strong>Telephone:</strong><br />
                    <span class="text-muted">@(Model.Telephone ?? "-")</span>
                </div>

                <div class="col-md-6">
                    <strong>City:</strong><br />
                    <span class="text-muted">@(Model.City ?? "-")</span>
                </div>

                <div class="col-12">
                    <strong>Address:</strong><br />
                    <span class="text-muted">@(Model.Address ?? "-")</span>
                </div>

                <div class="col-md-6">
                    <strong>Experience:</strong><br />
                    <span class="badge bg-info text-dark px-3 py-2">
                        @Model.Experience Years
                    </span>
                </div>

                <div class="col-12">
                    <strong>Description:</strong><br />
                    <span class="text-muted">@(Model.Description ?? "-")</span>
                </div>

            </div>

            <hr class="my-4" />

            <!-- Payment Section -->
            <h5 class="fw-semibold mb-3">💳 Payment Information</h5>

            <div class="row g-3">

                <div class="col-md-4">
                    <strong>Payment Type:</strong><br />
                    <span class="badge bg-primary px-3 py-2">
                        @(Model.PaymentType ?? "-")
                    </span>
                </div>

                <div class="col-md-4">
                    <strong>Payment Status:</strong><br />
                    <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark") px-3 py-2">
                        @(Model.PaymentStatus ?? "Pending")
                    </span>
                </div>

                <div class="col-md-4">
                    <strong>Payment Amount:</strong><br />
                    <span class="fw-bold text-success fs-5">
                        ₹ @Model.PaymentAmount
                    </span>
                </div>

            </div>

        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex gap-3">
        <a asp-action="EditDriver" asp-route-id="@Model.DriverId"
           class="btn btn-warning px-4">
            ✏️ Edit Driver
        </a>

        <form asp-action="DeleteDriver"
              asp-route-id="@Model.DriverId"
              method="post"
              onsubmit="return confirm('Delete this driver?');">

            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger px-4">
                🗑 Delete Driver
            </button>
        </form>
    </div>

</div>
