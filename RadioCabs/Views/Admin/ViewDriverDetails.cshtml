@model Driver
@{
    ViewData["Title"] = "Driver Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Driver Details</h2>
    <a asp-action="ManageDrivers" class="btn btn-secondary">Back to Manage Drivers</a>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Driver Name</dt>
            <dd class="col-sm-9">@Model.DriverName</dd>

            <dt class="col-sm-3">Driver Unique ID</dt>
            <dd class="col-sm-9">@Model.DriverUniqueId</dd>

            <dt class="col-sm-3">Contact Person</dt>
            <dd class="col-sm-9">@(Model.ContactPerson ?? "-")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(Model.Email ?? "-")</dd>

            <dt class="col-sm-3">Mobile</dt>
            <dd class="col-sm-9">@(Model.Mobile ?? "-")</dd>

            <dt class="col-sm-3">Telephone</dt>
            <dd class="col-sm-9">@(Model.Telephone ?? "-")</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@(Model.City ?? "-")</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@(Model.Address ?? "-")</dd>

            <dt class="col-sm-3">Experience</dt>
            <dd class="col-sm-9">@Model.Experience years</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "-")</dd>

            <dt class="col-sm-3">Payment Type</dt>
            <dd class="col-sm-9">@(Model.PaymentType ?? "-")</dd>

            <dt class="col-sm-3">Payment Status</dt>
            <dd class="col-sm-9">@(Model.PaymentStatus ?? "Pending")</dd>

            <dt class="col-sm-3">Payment Amount</dt>
            <dd class="col-sm-9">@Model.PaymentAmount</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="EditDriver" asp-route-id="@Model.DriverId" class="btn btn-warning">Edit Driver</a>
    <form asp-action="DeleteDriver" asp-route-id="@Model.DriverId" method="post" onsubmit="return confirm('Delete this driver?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Driver</button>
    </form>
</div>
