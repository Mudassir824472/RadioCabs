@model IEnumerable<Driver>
@{
    ViewData["Title"] = "Manage Drivers";
}

<style>
    body {
        background: linear-gradient(to right, #f4f6f9, #eef2f7);
    }

    .premium-header {
        background: linear-gradient(135deg, #141E30, #243B55);
        padding: 30px;
        border-radius: 22px;
        color: white;
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }

        .premium-header h2 {
            font-weight: 600;
        }

    .premium-card {
        border: none;
        border-radius: 22px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        transition: 0.3s ease;
        overflow: hidden;
    }

        .premium-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
        }

    .table {
        margin-bottom: 0;
    }

        .table thead {
            background: #243B55;
            color: white;
            font-size: 14px;
            letter-spacing: 0.5px;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9fbfd;
    }

    .table tbody tr {
        transition: 0.2s ease;
    }

        .table tbody tr:hover {
            background-color: #eaf1ff;
        }

    .badge {
        padding: 7px 14px;
        border-radius: 10px;
        font-size: 12px;
        font-weight: 500;
    }

    .btn {
        border-radius: 10px;
        padding: 6px 15px;
        font-size: 13px;
        transition: 0.25s ease;
    }

        .btn:hover {
            transform: scale(1.06);
        }

    .alert-success {
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    }

    .empty-state {
        padding: 60px 0;
        font-size: 15px;
        color: #888;
    }
</style>

<div class="premium-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">Manage Drivers</h2>
        <small>View, edit and manage all registered drivers</small>
    </div>
    <a asp-action="Dashboard" class="btn btn-light">
        ← Back to Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mb-4">
        @TempData["Success"]
    </div>
}

<div class="card premium-card">
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Driver Name</th>
                    <th>Driver ID</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>City</th>
                    <th>Payment</th>
                    <th style="width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center empty-state">
                            No drivers found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var driver in Model)
                    {
                        <tr>
                            <td>@driver.DriverName</td>
                            <td>@driver.DriverUniqueId</td>
                            <td>@(driver.Email ?? "-")</td>
                            <td>@(driver.Mobile ?? "-")</td>
                            <td>@(driver.City ?? "-")</td>
                            <td>
                                <span class="badge @(driver.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                                    @(driver.PaymentStatus ?? "Pending")
                                </span>
                            </td>
                            <td class="d-flex gap-1">
                                <a asp-action="ViewDriverDetails"
                                   asp-route-id="@driver.DriverId"
                                   class="btn btn-sm btn-info text-white">
                                    View
                                </a>

                                <a asp-action="EditDriver"
                                   asp-route-id="@driver.DriverId"
                                   class="btn btn-sm btn-warning text-dark">
                                    Edit
                                </a>

                                <form asp-action="DeleteDriver"
                                      asp-route-id="@driver.DriverId"
                                      method="post"
                                      onsubmit="return confirm('Delete this driver?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
