@model IEnumerable<Driver>
@{
    ViewData["Title"] = "Manage Drivers";
}

<style>
    body {
        background: #f4f6f9;
    }

    .premium-header {
        background: linear-gradient(135deg, #0f2027, #203a43, #2c5364);
        padding: 25px 30px;
        border-radius: 20px;
        color: white;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
    }

    .premium-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.07);
        transition: 0.3s ease;
        overflow: hidden;
    }

        .premium-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 45px rgba(0,0,0,0.12);
        }

    .table thead {
        background: #203a43;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9fbfd;
    }

    .table tbody tr:hover {
        background-color: #eef3ff;
        transition: 0.2s;
    }

    .badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
    }

    .btn {
        border-radius: 8px;
        padding: 5px 14px;
        font-size: 13px;
        transition: 0.3s;
    }

        .btn:hover {
            transform: scale(1.05);
        }

    .alert-success {
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
</style>


<div class="premium-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0">Manage Drivers</h2>
        <small>View, edit and manage registered Drivers</small>
    </div>
    <a asp-action="Dashboard" class="btn btn-light">
        ← Back to Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card premium-card">
    <div class="table-responsive">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Driver Name</th>
                    <th>Driver ID</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>City</th>
                    <th>Payment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">No drivers found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var driver in Model)
                    {
                        <tr>
                            <td>@driver.DriverName</td>
                            <td>@driver.DriverUniqueId</td>
                            <td>@(driver.Email ?? "-")</td>
                            <td>@(driver.Mobile ?? "-")</td>
                            <td>@(driver.City ?? "-")</td>
                            <td>
                                <span class="badge @(driver.PaymentStatus == "Paid" ? "bg-success" : "bg-warning text-dark")">
                                    @(driver.PaymentStatus ?? "Pending")
                                </span>
                            </td>
                            <td class="d-flex gap-1">
                                <a asp-action="ViewDriverDetails" asp-route-id="@driver.DriverId" class="btn btn-sm btn-info">View</a>
                                <a asp-action="EditDriver" asp-route-id="@driver.DriverId" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="DeleteDriver" asp-route-id="@driver.DriverId" method="post" onsubmit="return confirm('Delete this driver?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
