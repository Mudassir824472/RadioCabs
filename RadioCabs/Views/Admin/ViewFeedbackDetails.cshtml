@model Feedback
@{
    ViewData["Title"] = "Feedback Details";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Feedback Details</h2>
    <a asp-action="ManageFeedbacks" class="btn btn-secondary">Back to Manage Feedback</a>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@(Model.Name ?? "-")</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@(Model.Type ?? "-")</dd>

            <dt class="col-sm-3">Mobile</dt>
            <dd class="col-sm-9">@(Model.Mobile ?? "-")</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@(Model.Email ?? "-")</dd>

            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@(Model.City ?? "-")</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@(Model.Description ?? "-")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="DeleteFeedback" asp-route-id="@Model.FeedbackId" method="post" onsubmit="return confirm('Delete this feedback entry?');">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete Feedback</button>
    </form>
</div>
