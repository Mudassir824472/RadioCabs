@model Feedback
@{
    ViewData["Title"] = "Feedback Details";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">💬 Feedback Details</h2>
            <small class="text-muted">User submitted feedback information</small>
        </div>
        <a asp-action="ManageFeedbacks" class="btn btn-outline-secondary">
            ← Back to Manage Feedback
        </a>
    </div>

    <!-- Main Card -->
    <div class="card shadow-lg border-0 rounded-4">
        
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0">@(Model.Name ?? "Anonymous User")</h5>
        </div>

        <div class="card-body p-4">

            <div class="row g-4">

                <div class="col-md-6">
                    <strong>Type:</strong><br />
                    <span class="badge bg-info text-dark px-3 py-2">
                        @(Model.Type ?? "-")
                    </span>
                </div>

                <div class="col-md-6">
                    <strong>City:</strong><br />
                    <span class="text-muted">
                        @(Model.City ?? "-")
                    </span>
                </div>

                <div class="col-md-6">
                    <strong>Mobile:</strong><br />
                    <span class="text-muted">
                        @(Model.Mobile ?? "-")
                    </span>
                </div>

                <div class="col-md-6">
                    <strong>Email:</strong><br />
                    <span class="text-muted">
                        @(Model.Email ?? "-")
                    </span>
                </div>

                <div class="col-12">
                    <strong>Description:</strong><br />
                    <div class="p-3 mt-2 bg-light rounded-3 border">
                        @(Model.Description ?? "-")
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- Action Section -->
    <div class="mt-4">
        <form asp-action="DeleteFeedback"
              asp-route-id="@Model.FeedbackId"
              method="post"
              onsubmit="return confirm('Delete this feedback entry?');">

            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger px-4">
                🗑 Delete Feedback
            </button>
        </form>
    </div>

</div>
