@model RadioCabs.Models.Feedback
@{
    ViewData["Title"] = "Feedback";
    Layout = null;   // Remove if you want normal layout
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #2c3e50, #4ca1af);
        font-family: 'Segoe UI', sans-serif;
    }

    .feedback-card {
        max-width: 750px;
        margin: 50px auto;
        border-radius: 20px;
        box-shadow: 0 20px 45px rgba(0,0,0,0.25);
        border: none;
        overflow: hidden;
    }

    .feedback-header {
        background: linear-gradient(135deg, #141e30, #243b55);
        color: white;
        padding: 25px;
        text-align: center;
    }

    .form-control, .form-select, textarea {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-rounded {
        border-radius: 10px;
        padding: 8px 20px;
        font-weight: 600;
    }
</style>

<div class="card feedback-card">

    <div class="feedback-header">
        <h3 class="mb-0">💬 Customer Feedback</h3>
        <small>We value your opinion</small>
    </div>

    <div class="card-body p-4">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center shadow-sm">
                @TempData["Success"]
            </div>
        }

        <form asp-action="Index" method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Mobile" class="form-label fw-semibold"></label>
                    <input asp-for="Mobile" class="form-control" placeholder="Enter mobile number" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email address" />
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label fw-semibold"></label>
                <input asp-for="City" class="form-control" placeholder="Enter your city" />
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label fw-semibold"></label>
                <select asp-for="Type" class="form-select">
                    <option value="">Select feedback type</option>
                    <option>Complaint</option>
                    <option>Suggestion</option>
                    <option>Compliment</option>
                </select>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Write your feedback here..."></textarea>
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-dark btn-rounded">
                    🚀 Submit
                </button>

                <button type="reset" class="btn btn-outline-secondary btn-rounded">
                    Reset
                </button>
            </div>

        </form>

    </div>
</div>
