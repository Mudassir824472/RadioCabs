@model RadioCabs.Models.Company
@{
    ViewData["Title"] = "Company Registration";
    Layout = null;   // Remove dashboard layout if needed
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(135deg, #141e30, #243b55);
        font-family: 'Segoe UI', sans-serif;
    }

    .register-card {
        max-width: 850px;
        margin: 40px auto;
        border-radius: 20px;
        box-shadow: 0 20px 45px rgba(0,0,0,0.25);
        border: none;
    }

    .register-header {
        background: linear-gradient(135deg, #1f4037, #99f2c8);
        padding: 25px;
        border-radius: 20px 20px 0 0;
        text-align: center;
        color: #000;
        font-weight: 600;
    }

    .form-control, .form-select, textarea {
        border-radius: 10px;
        padding: 10px 14px;
    }

    .btn-rounded {
        border-radius: 10px;
        padding: 8px 22px;
        font-weight: 600;
    }

    .section-title {
        font-weight: 600;
        margin-top: 20px;
        margin-bottom: 10px;
        color: #555;
    }
</style>

<div class="card register-card">

    <div class="register-header">
        <h3 class="mb-0">🏢 Company Registration</h3>
        <small>Join RadioCabs Corporate Portal</small>
    </div>

    <div class="card-body p-4">

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Basic Info -->
            <div class="section-title">Basic Information</div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CompanyName" class="form-label fw-semibold"></label>
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="CompanyUniqueId" class="form-label fw-semibold"></label>
                    <input asp-for="CompanyUniqueId" class="form-control" />
                    <span asp-validation-for="CompanyUniqueId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>

            <!-- Contact Info -->
            <div class="section-title">Contact Information</div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ContactPerson" class="form-label"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Designation" class="form-label"></label>
                    <input asp-for="Designation" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="Mobile" class="form-label"></label>
                    <input asp-for="Mobile" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Telephone" class="form-label"></label>
                    <input asp-for="Telephone" class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="FaxNumber" class="form-label"></label>
                    <input asp-for="FaxNumber" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <!-- Membership -->
            <div class="section-title">Subscription Details</div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MembershipType" class="form-label"></label>
                    <select asp-for="MembershipType" class="form-select">
                        <option value="">Select Plan</option>
                        <option>Premium</option>
                        <option>Basic</option>
                        <option>Free</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PaymentType" class="form-label"></label>
                    <select asp-for="PaymentType" class="form-select">
                        <option value="">Select Payment</option>
                        <option>Monthly</option>
                        <option>Quarterly</option>
                    </select>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex gap-3 mt-4">
                <button type="submit" class="btn btn-dark btn-rounded">
                    🚀 Register
                </button>

                <button type="reset" class="btn btn-outline-secondary btn-rounded">
                    Reset
                </button>
            </div>

        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none">
                Already have an account? Login
            </a>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
