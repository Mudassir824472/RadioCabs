@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@model RadioCabs.Models.Company


@{
    ViewData["Title"] = "Register";
}


<h2>Company Registration</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()
    <label>Company Name</label>
    <input asp-for="CompanyName" class="form-control" />
    <span asp-validation-for="CompanyName" class="text-danger"></span>

    <label>Company Unique ID</label>
    <input asp-for="CompanyUniqueId" class="form-control" />
    <span asp-validation-for="CompanyUniqueId" class="text-danger"></span><br/>


    <label>Password</label>
    <input asp-for="Password" type="password" class="form-control" />
    
    <label>Contact Person</label>
    <input asp-for="ContactPerson" class="form-control" />

    <label>Designation</label>
    <input asp-for="Designation" class="form-control" />

    <label>Address</label>
    <textarea asp-for="Address" class="form-control"></textarea>

    <label>Mobile</label>
    <input asp-for="Mobile" class="form-control" />

    <label>Telephone</label>
    <input asp-for="Telephone" class="form-control" />

    <label>Fax Number</label>
    <input asp-for="FaxNumber" class="form-control" />

    <label>Email</label>
    <input asp-for="Email" class="form-control" />

    <label>Membership Type</label>
    <select asp-for="MembershipType" class="form-control">
        <option>Premium</option>
        <option>Basic</option>
        <option>Free</option>
    </select>

    <label>Payment Type</label>
    <select asp-for="PaymentType" class="form-control">
        <option>Monthly</option>
        <option>Quarterly</option>
    </select>

    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
</form>


<div>
    <a asp-action="Success">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
