@model Company

@{
    ViewData["Title"] = "Company Dashboard";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #f4f6f9;
    }

    .dashboard-card {
        border: none;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .dashboard-header {
        background: linear-gradient(135deg, #141e30, #243b55);
        color: white;
        padding: 25px;
        border-radius: 18px 18px 0 0;
    }

    .info-label {
        font-weight: 600;
        color: #555;
    }

    .info-value {
        font-weight: 500;
    }

    .badge-paid {
        background-color: #28a745;
    }

    .badge-pending {
        background-color: #dc3545;
    }

    .btn-rounded {
        border-radius: 10px;
        padding: 8px 20px;
    }
</style>

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">🏢 Welcome, @Model.CompanyName</h2>
        <a asp-action="Logout" class="btn btn-outline-danger btn-rounded">
            Logout
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">
            @TempData["Success"]
        </div>
    }

    <!-- Company Profile Card -->
    <div class="card dashboard-card mb-4">

        <div class="dashboard-header">
            <h4 class="mb-0">Company Profile Summary</h4>
        </div>

        <div class="card-body p-4">

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="info-label">Company ID</div>
                    <div class="info-value">@Model.CompanyUniqueId</div>
                </div>

                <div class="col-md-6">
                    <div class="info-label">Email</div>
                    <div class="info-value">@Model.Email</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="info-label">Contact Person</div>
                    <div class="info-value">@(Model.ContactPerson ?? "-")</div>
                </div>

                <div class="col-md-6">
                    <div class="info-label">Membership Type</div>
                    <div class="info-value">@Model.MembershipType</div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="info-label">Payment Type</div>
                    <div class="info-value">@Model.PaymentType</div>
                </div>

                <div class="col-md-6">
                    <div class="info-label">Payment Status</div>
                    <div class="info-value">
                        @if (string.Equals(Model.PaymentStatus, "Paid", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="badge badge-paid">Paid</span>
                        }
                        else
                        {
                            <span class="badge badge-pending">Pending</span>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-3 flex-wrap">

        <a asp-action="Profile" class="btn btn-primary btn-rounded">
            ✏ View / Edit Full Profile
        </a>

        @if (!string.Equals(Model.PaymentStatus, "Paid", StringComparison.OrdinalIgnoreCase))
        {
            <a asp-controller="Payment"
               asp-action="Company"
               asp-route-id="@Model.CompanyId"
               class="btn btn-success btn-rounded">
                💳 Make Payment
            </a>
        }

        <a href="../Advertise" class="btn btn-primary btn-rounded">
            ✏ Advertise Now
        </a>

    </div>

</div>
