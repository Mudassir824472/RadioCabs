﻿
@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RadioCabs</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/RadioCabs.style.css" asp-append-version="true" />
</head>
<body>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        <div class="hero-content position-relative p-4 p-md-5 mb-4 text-white">

        <div class="container-fluid py-3 align-content-center ">
            <h1 class="display-5 fw-bold">RadioCabs.in</h1>
            <p class="col-md-10 fs-5 text-white">
                RadioCabs.in is a city-wise directory of radio taxi operators, drivers, and transport services across India.
                We help users discover safe, cost-effective, and personalized cab services available round-the-clock.
            </p>
            <p class="mb-0 text-white">Membership options: <strong>Premium</strong>, <strong>Basic</strong>, and <strong>Free</strong>.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
                <div class="card feature-cardh-100">
                <div class="card-body">
                    <h5 class="card-title">Listing</h5>
                    <p class="card-text">Register your cab company and get discovered by users searching for taxi services.</p>
                        <a asp-controller="Listing" asp-action="Index" class="btn btn-custom">Open Listing</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Drivers</h5>
                    <p class="card-text">Register drivers and let companies search for talent according to their requirements.</p>
                        <a asp-controller="Driver" asp-action="Index" class="btn btn-custom">Open Drivers</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Services</h5>
                    <p class="card-text">Learn about the platform services, membership plans, and support options.</p>
                        <a asp-controller="Services" asp-action="Index" class="btn btn-custom">View Services</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Advertise</h5>
                    <p class="card-text">Submit your advertisement request to promote your organization online.</p>
                        <a asp-controller="Advertise" asp-action="Index" class="btn btn-custom">Advertise Now</a>
                </div>
            </div>
        </div>
    </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3>Featured Paid Advertisements</h3>
            </div>

            @if (Model?.PaidAdvertisements == null || Model.PaidAdvertisements.Count == 0)
            {
                <div class="col-12">
                    <div class="alert alert-light border">No paid advertisements are available right now.</div>
                </div>
            }
            else
            {
                @foreach (var advertisement in Model.PaidAdvertisements)
                {
                    <div class="col-md-6 col-xl-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-start">
                                <h5 class="card-title mb-1">@(advertisement.CompanyName ?? "-")</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@(advertisement.Designation ?? "-")</h6>
                                <p class="card-text mb-2">@(advertisement.Description ?? "No description provided.")</p>
                                <div><strong>Mobile:</strong> @(advertisement.Mobile ?? "-")</div>
                                <div><strong>Telephone:</strong> @(advertisement.Telephone ?? "-")</div>
                                <div><strong>Email:</strong> @(advertisement.Email ?? "-")</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>


        <!-- SERVICES OVERVIEW SECTION -->
        <section class="content-section py-5 bg-transparent" id="services">
            <div class="container">

                <!-- Section Header -->
                <div class="text-center mb-5">
                    <h2 class="display-4 text-primary fw-bold">Services Overview</h2>
                    <p class="text-light fs-5">
                        RadioCabs.in connects passengers, radio taxi operators, and professional drivers through a city-wise directory.
                        Explore the core services below to register, advertise, and manage listings across India.
                    </p>
                </div>

                <!-- Cards Row -->
                <div class="row g-4">

                    <!-- Listings & Memberships -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">Listings & Memberships</h5>
                                <p class="card-text">
                                    Cab companies can register to appear in city-wise search results.
                                    Choose from <strong>Premium, Basic, or Free</strong> memberships depending on visibility needs.
                                </p>
                                <ul class="list-unstyled">
                                    <li><strong>Premium:</strong> Featured listing, priority visibility</li>
                                    <li><strong>Basic:</strong> Standard listing with limited features</li>
                                    <li><strong>Free:</strong> Basic visibility in search results</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Driver Directory -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">Driver Directory</h5>
                                <p class="card-text">
                                    Drivers can register their profiles. Companies can filter and search drivers by:
                                </p>
                                <ul>
                                    <li>Location</li>
                                    <li>Experience</li>
                                    <li>Contact details</li>
                                    <li>Vehicle type</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Advertising Requests -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">Advertising Requests</h5>
                                <p class="card-text">
                                    Registered companies can submit advertising requests to promote services online and enhance visibility.
                                </p>
                                <ul>
                                    <li>Custom banners on homepage</li>
                                    <li>Feature on city search pages</li>
                                    <li>Highlight services to targeted audience</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Feedback & Support -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">Feedback & Support</h5>
                                <p class="card-text">
                                    Users can share complaints, suggestions, or compliments to help us improve the experience.
                                </p>
                                <ul>
                                    <li>Submit feedback through online form</li>
                                    <li>Track status of your submissions</li>
                                    <li>Receive responses from the admin team</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Plans -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">Payment Plans</h5>
                                <p class="card-text">
                                    Payments are done online either <strong>Monthly</strong> or <strong>Quarterly</strong>:
                                </p>
                                <ul>
                                    <li>Registration: $15/month | $40/quarter</li>
                                    <li>Driver: $10/month | $25/quarter</li>
                                    <li>Advertisement: $15/month | $40/quarter</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <!-- User Roles -->
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title text-primary fw-bold">User Roles</h5>
                                <p class="card-text">
                                    The platform has three types of users:
                                </p>
                                <ul>
                                    <li><strong>Admin:</strong> Manage all registrations, payments, driver details, advertisements, and feedback</li>
                                    <li><strong>Registered Unit:</strong> View their profile, check payment status, manage listings and ads</li>
                                    <li><strong>User:</strong> Search for companies/drivers, submit feedback, register for services</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>

</div>




</body>



</html>