@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RadioCabs</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/RadioCabs.style.css" asp-append-version="true" />
</head>
<body>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        <div class="hero-content position-relative p-4 p-md-5 mb-4 text-white">

        <div class="container-fluid py-3 align-content-center">
            <h1 class="display-5 fw-bold">RadioCabs.in</h1>
            <p class="col-md-10 fs-5 text-white">
                RadioCabs.in is a city-wise directory of radio taxi operators, drivers, and transport services across India.
                We help users discover safe, cost-effective, and personalized cab services available round-the-clock.
            </p>
            <p class="mb-0 text-white">Membership options: <strong>Premium</strong>, <strong>Basic</strong>, and <strong>Free</strong>.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
                <div class="card feature-cardh-100">
                <div class="card-body">
                    <h5 class="card-title">Listing</h5>
                    <p class="card-text">Register your cab company and get discovered by users searching for taxi services.</p>
                        <a asp-controller="Listing" asp-action="Index" class="btn btn-custom">Open Listing</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Drivers</h5>
                    <p class="card-text">Register drivers and let companies search for talent according to their requirements.</p>
                        <a asp-controller="Driver" asp-action="Index" class="btn btn-custom">Open Drivers</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Services</h5>
                    <p class="card-text">Learn about the platform services, membership plans, and support options.</p>
                        <a asp-controller="Services" asp-action="Index" class="btn btn-custom">View Services</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Advertise</h5>
                    <p class="card-text">Submit your advertisement request to promote your organization online.</p>
                        <a asp-controller="Advertise" asp-action="Index" class="btn btn-custom">Advertise Now</a>
                </div>
            </div>
        </div>
    </div>

        <div class="row mt-5">
            <div class="col-12">
                <h3>Featured Paid Advertisements</h3>
                <p class="text-muted">Companies that completed advertisement payment are highlighted here for easy visibility.</p>
            </div>

            @if (!Model.PaidAdvertisements.Any())
            {
                <div class="col-12">
                    <div class="alert alert-light border">No paid advertisements are available right now.</div>
                </div>
            }
            else
            {
                @foreach (var advertisement in Model.PaidAdvertisements)
                {
                    <div class="col-md-6 col-xl-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body text-start">
                                <h5 class="card-title mb-1">@(advertisement.CompanyName ?? "-")</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@(advertisement.Designation ?? "-")</h6>
                                <p class="card-text mb-2">@(advertisement.Description ?? "No description provided.")</p>
                                <div><strong>Mobile:</strong> @(advertisement.Mobile ?? "-")</div>
                                <div><strong>Telephone:</strong> @(advertisement.Telephone ?? "-")</div>
                                <div><strong>Email:</strong> @(advertisement.Email ?? "-")</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>


        <div class="row g-4">
            <div class="col-lg-8">
                <h2>Services Overview</h2>
                <p class="text-muted">
                    RadioCabs.in connects passengers, radio taxi operators, and professional drivers through a
                    city-wise directory. Explore the core services below to register, advertise, and manage
                    listings across India.
                </p>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Listings & Memberships</h5>
                        <p class="card-text">
                            Cab companies can register to appear in city-wise search results. Choose from
                            <strong>Premium</strong>, <strong>Basic</strong>, or <strong>Free</strong> memberships
                            depending on visibility needs.
                        </p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Driver Directory</h5>
                        <p class="card-text">
                            Drivers can register their profiles, while companies search and filter by location,
                            experience, and contact details.
                        </p>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Advertising Requests</h5>
                        <p class="card-text">
                            Registered companies can submit advertising requests to promote their services online
                            and enhance visibility.
                        </p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Feedback & Support</h5>
                        <p class="card-text">
                            Users can share complaints, suggestions, or compliments through the feedback form to
                            help us improve the experience.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <h3>Login Access</h3>
                <ul class="list-group mb-4">
                    <li class="list-group-item"><strong>Admin</strong> – Manage registrations, payments, and feedback.</li>
                    <li class="list-group-item"><strong>Registered Unit</strong> – View profiles, orders, and payment status.</li>
                </ul>

                <h3>Payment Plans</h3>
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Section</th>
                            <th>Monthly</th>
                            <th>Quarterly</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr><td>Registration</td><td>$15</td><td>$40</td></tr>
                        <tr><td>Driver</td><td>$10</td><td>$25</td></tr>
                        <tr><td>Advertisement</td><td>$15</td><td>$40</td></tr>
                    </tbody>
                </table>
            </div>
        </div>


    <div class="row mt-4">
        <div class="col-lg-8">
            <h3>Payment Plans</h3>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Section</th>
                        <th>Monthly</th>
                        <th>Quarterly</th>
                    </tr>
                </thead>
                <tbody>
                    <tr><td>Registration</td><td>$15</td><td>$40</td></tr>
                    <tr><td>Driver</td><td>$10</td><td>$25</td></tr>
                    <tr><td>Advertisement</td><td>$15</td><td>$40</td></tr>
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <h3>Authentication</h3>
            <div class="d-grid gap-2">
                <a asp-controller="Company" asp-action="Login" class="btn btns">Registered Unit Login</a>
                <a asp-controller="Admin" asp-action="Login" class="btn btns">Admin Login</a>
                <a asp-controller="Feedback" asp-action="Index" class="btn btns">Share Feedback</a>
            </div>
        </div>
    </div>
</body>