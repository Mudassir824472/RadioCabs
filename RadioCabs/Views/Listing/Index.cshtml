@model RadioCabs.Models.ListingPageViewModel
@{
    ViewData["Title"] = "Radio Cabs Listing";
}

<style>
    body {
        background-color: #f4f6f9;
    }

    .listing-card {
        border-radius: 18px;
        border: none;
        box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    }

    .listing-header {
        background: linear-gradient(135deg, #141e30, #243b55);
        color: white;
        padding: 20px;
        border-radius: 18px 18px 0 0;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 8px 14px;
    }

    .btn-rounded {
        border-radius: 10px;
        font-weight: 600;
    }

    .membership-badge {
        padding: 5px 10px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

    .badge-premium {
        background-color: #ffc107;
    }

    .badge-basic {
        background-color: #17a2b8;
        color: white;
    }

    .badge-free {
        background-color: #6c757d;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
        transition: 0.2s;
    }
</style>

<div class="container py-4">

    <div class="card listing-card">

        <div class="listing-header">
            <h4 class="mb-0">📋 Radio Cabs Company Directory</h4>
        </div>

        <div class="card-body p-4">

            <!-- Search Section -->
            <h5 class="mb-3">🔎 Search Registered Companies</h5>

            <form method="get" class="row g-3 align-items-end mb-4">

                <div class="col-md-4">
                    <label class="form-label fw-semibold">Search</label>
                    <input asp-for="SearchTerm" class="form-control"
                           placeholder="Company, contact, email, phone" />
                </div>

                

                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark btn-rounded w-100">
                        Search
                    </button>
                </div>

            </form>

            <!-- Results Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">

                    <thead class="table-light">
                        <tr>
                            <th>Company</th>
                            <th>Contact</th>
                            <th>Membership</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Results != null && Model.Results.Any())
                        {
                            foreach (var company in Model.Results)
                            {
                                <tr>
                                    <td>
                                        <strong>@company.CompanyName</strong>
                                    </td>

                                    <td>
                                        <div>@company.Mobile</div>
                                        <small class="text-muted">@company.Email</small>
                                    </td>

                                    <td>
                                        @if (company.MembershipType == "Premium")
                                        {
                                            <span class="membership-badge badge-premium">
                                                Premium
                                            </span>
                                        }
                                        else if (company.MembershipType == "Basic")
                                        {
                                            <span class="membership-badge badge-basic">
                                                Basic
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="membership-badge badge-free">
                                                Free
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    No companies found.
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
