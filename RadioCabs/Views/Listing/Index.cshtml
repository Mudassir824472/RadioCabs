@model RadioCabs.Models.ListingPageViewModel
@{
    ViewData["Title"] = "Listing";
}

<h2>Radio Cabs Listing</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="row g-4">
    <div class="col-lg-6">
        <h4>Registration</h4>
        <form asp-action="Register" method="post" class="border rounded p-3">
            @Html.AntiForgeryToken()
            <div class="mb-2"><label>Company Name</label><input asp-for="Registration.CompanyName" class="form-control" /></div>
            <div class="mb-2"><label>Company ID</label><input asp-for="Registration.CompanyUniqueId" class="form-control" /><span asp-validation-for="Registration.CompanyUniqueId" class="text-danger"></span></div>
            <div class="mb-2"><label>Password</label><input asp-for="Registration.Password" type="password" class="form-control" /></div>
            <div class="mb-2"><label>Contact Person</label><input asp-for="Registration.ContactPerson" class="form-control" /></div>
            <div class="mb-2"><label>Designation</label><input asp-for="Registration.Designation" class="form-control" /></div>
            <div class="mb-2"><label>Address</label><textarea asp-for="Registration.Address" class="form-control"></textarea></div>
            <div class="mb-2"><label>Mobile</label><input asp-for="Registration.Mobile" class="form-control" /></div>
            <div class="mb-2"><label>Telephone</label><input asp-for="Registration.Telephone" class="form-control" /></div>
            <div class="mb-2"><label>Fax Number</label><input asp-for="Registration.FaxNumber" class="form-control" /></div>
            <div class="mb-2"><label>Email</label><input asp-for="Registration.Email" class="form-control" /></div>
            <div class="mb-2"><label>Membership Type</label><select asp-for="Registration.MembershipType" class="form-select"><option>Premium</option><option>Basic</option><option>Free</option></select></div>
            <div class="mb-2"><label>Payment Type</label><select asp-for="Registration.PaymentType" id="listingPaymentType" class="form-select"><option>Monthly</option><option>Quarterly</option></select></div>
            <div class="alert alert-info py-2">Payable amount: <strong id="listingAmount">$15</strong></div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </form>
    </div>

    <div class="col-lg-6">
        <h4>Search Registered Companies</h4>
        <form method="get" class="d-flex gap-2 mb-3">
            <input name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search by company or location" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </form>

        <div class="table-responsive border rounded">
            <table class="table table-sm mb-0">
                <thead class="table-light"><tr><th>Company</th><th>Contact</th><th>Membership</th></tr></thead>
                <tbody>
                    @foreach (var company in Model.Results)
                    {
                        <tr>
                            <td>@company.CompanyName</td>
                            <td>@company.Mobile<br /><small>@company.Email</small></td>
                            <td>@company.MembershipType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const listingType = document.getElementById('listingPaymentType');
        const listingAmount = document.getElementById('listingAmount');
        function updateListingAmount() {
            listingAmount.textContent = listingType.value === 'Quarterly' ? '$40' : '$15';
        }
        listingType.addEventListener('change', updateListingAmount);
        updateListingAmount();
    </script>
}
