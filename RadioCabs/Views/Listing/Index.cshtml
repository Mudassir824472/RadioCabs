@model RadioCabs.Models.ListingPageViewModel
@{
    ViewData["Title"] = "Listing";
}

<h2>Radio Cabs Listing</h2>


<div class="row g-4">
    

    <div class="col-lg-6">
        <h4>Search Registered Companies</h4>
        <form method="get" class="row g-2 align-items-end mb-3">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control" placeholder="Company, contact, email, or phone" />
            </div>
            <div class="col-md-6">
                <label class="form-label">City/Address</label>
                <input asp-for="City" class="form-control" placeholder="City or address" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Membership</label>
                <select asp-for="MembershipType" class="form-select">
                    <option value="">All</option>
                    <option value="Premium">Premium</option>
                    <option value="Basic">Basic</option>
                    <option value="Free">Free</option>
                </select>
            </div>
        
            <div class="col-md-4">
                <button type="submit" class="btn btn-outline-primary w-100">Search</button>
            </div>
        </form>

        <div class="table-responsive border rounded">
            <table class="table table-sm mb-0">
                <thead class="table-light"><tr><th>Company</th><th>Contact</th><th>Membership</th></tr></thead>
                <tbody>
                    @foreach (var company in Model.Results)
                    {
                        <tr>
                            <td>@company.CompanyName</td>
                            <td>@company.Mobile<br /><small>@company.Email</small></td>
                            <td>@company.MembershipType</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const listingType = document.getElementById('listingPaymentType');
        const listingAmount = document.getElementById('listingAmount');
        function updateListingAmount() {
            listingAmount.textContent = listingType.value === 'Quarterly' ? '$40' : '$15';
        }
        listingType.addEventListener('change', updateListingAmount);
        updateListingAmount();
    </script>
}
