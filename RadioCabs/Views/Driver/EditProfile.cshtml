@model DriverProfileEditViewModel
@{
    ViewData["Title"] = "Edit Driver Profile";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #f4f6f9;
    }

    .edit-card {
        border: none;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    .edit-header {
        background: linear-gradient(135deg, #1f4037, #99f2c8);
        color: white;
        padding: 25px;
        border-radius: 18px 18px 0 0;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px;
    }

    .section-title {
        font-weight: 600;
        margin-top: 20px;
        margin-bottom: 15px;
        color: #333;
    }

    .action-btn {
        border-radius: 10px;
        padding: 10px 20px;
    }
</style>

<div class="container py-5">

    <div class="card edit-card">

        <div class="edit-header">
            <h3 class="mb-0">✏ Edit Your Profile</h3>
        </div>

        <div class="card-body p-4">

            <form asp-action="EditProfile" method="post">
                @Html.AntiForgeryToken()
                <input asp-for="DriverId" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Basic Info -->
                <div class="section-title">Basic Information</div>

                <div class="mb-3">
                    <label asp-for="DriverUniqueId" class="form-label"></label>
                    <input asp-for="DriverUniqueId" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="DriverName" class="form-label"></label>
                    <input asp-for="DriverName" class="form-control" />
                    <span asp-validation-for="DriverName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContactPerson" class="form-label"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                </div>

                <!-- Contact Info -->
                <div class="section-title">Contact Details</div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Mobile" class="form-label"></label>
                        <input asp-for="Mobile" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Telephone" class="form-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                    </div>
                </div>

                <!-- Professional Info -->
                <div class="section-title">Professional Details</div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Experience" class="form-label"></label>
                        <input asp-for="Experience" class="form-control" />
                        <span asp-validation-for="Experience" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <!-- Password Section -->
                <hr />
                <div class="section-title">🔒 Change Password (Optional)</div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn btn-primary action-btn">
                        💾 Save Changes
                    </button>
                    <a asp-action="Dashboard" class="btn btn-outline-secondary action-btn">
                        Cancel
                    </a>
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
