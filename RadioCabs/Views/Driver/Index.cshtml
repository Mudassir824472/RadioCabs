@model RadioCabs.Models.DriverPageViewModel
@{
    ViewData["Title"] = "Drivers";
}

<h2>Driver Listing & Search</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["DriverId"] != null)
{
    <div class="alert alert-info">
        Complete payment for your driver registration:
        <a asp-controller="Payment" asp-action="Driver" asp-route-id="@(TempData["DriverId"])" class="btn btn-sm btn-success ms-2">Pay Now</a>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0 text-muted">Search and browse registered drivers.</p>
    <a asp-action="Register" class="btn btn-primary">Register New Driver</a>
</div>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-4">
        <label class="form-label">Search</label>
        <input asp-for="SearchTerm" class="form-control" placeholder="Name, city, email, or phone" />
    </div>
    <div class="col-md-3">
        <label class="form-label">City</label>
        <input asp-for="City" class="form-control" placeholder="City" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Min Experience</label>
        <input asp-for="MinExperience" class="form-control" type="number" min="0" />
    </div>
    <div class="col-md-2">
        <label class="form-label">Payment</label>
        <select asp-for="PaymentStatus" class="form-select">
            <option value="">All</option>
            <option value="Paid">Paid</option>
            <option value="Pending">Pending</option>
        </select>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<div class="table-responsive border rounded">
    <table class="table table-sm mb-0">
        <thead class="table-light"><tr><th>Name</th><th>City</th><th>Experience</th><th>Contact</th></tr></thead>
        <tbody>
            @if (!Model.Results.Any())
            {
                <tr><td colspan="4" class="text-center text-muted py-3">No drivers found.</td></tr>
            }
            else
            {
                @foreach (var driver in Model.Results)
                {
                    <tr>
                        <td>@driver.DriverName</td>
                        <td>@driver.City</td>
                        <td>@driver.Experience years</td>
                        <td>@driver.Mobile<br /><small>@driver.Email</small></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
