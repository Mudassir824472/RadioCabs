@model RadioCabs.Models.DriverPageViewModel
@{
    ViewData["Title"] = "Drivers";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #f4f6f9;
    }

    .page-header {
        font-weight: 700;
    }

    .filter-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    .table-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    }

    .badge-paid {
        background-color: #28a745;
    }

    .badge-pending {
        background-color: #dc3545;
    }

    .btn-rounded {
        border-radius: 10px;
        padding: 8px 18px;
    }

    .table thead {
        background: linear-gradient(135deg, #1f4037, #99f2c8);
        color: white;
    }
</style>

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-header">🚖 Driver Listing</h2>
            <p class="text-muted mb-0">Search and browse registered drivers</p>
        </div>
        <a asp-action="Register" class="btn btn-primary btn-rounded">
            + Register New Driver
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }

    

    <!-- Search Filter Card -->
    <div class="card filter-card p-4 mb-4">
        <form method="get" class="row g-3">

            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control"
                       placeholder="Name, city, email, phone" />
            </div>

            <div class="col-md-3">
                <label class="form-label">City</label>
                <input asp-for="City" class="form-control" placeholder="City" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Min Experience</label>
                <input asp-for="MinExperience" class="form-control"
                       type="number" min="0" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary btn-rounded w-100">
                    Search
                </button>
            </div>

        </form>
    </div>

    <!-- Driver Table -->
    <div class="table-responsive table-card">
        <table class="table table-hover mb-0 align-middle">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>Experience</th>
                    <th>Contact</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Results.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No drivers found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var driver in Model.Results)
                    {
                        <tr>
                            <td class="fw-semibold">@driver.DriverName</td>
                            <td>@driver.City</td>
                            <td>@driver.Experience years</td>
                            <td>
                                @driver.Mobile <br />
                                <small class="text-muted">@driver.Email</small>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>
