@model RadioCabs.Models.DriverPageViewModel
@{
    ViewData["Title"] = "Drivers";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    /* Page Header */
    .page-header {
        font-weight: 700;
        letter-spacing: 0.5px;
        color: #1f2937;
    }

    /* Register Button */
    .btn-primary {
        background: linear-gradient(45deg, #0072ff, #00c6ff);
        border: none;
        box-shadow: 0 6px 18px rgba(0,114,255,0.3);
        transition: 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,114,255,0.4);
        }

    /* Filter Card (Glass Effect) */
    .filter-card {
        border: none;
        border-radius: 20px;
        background: rgba(255,255,255,0.7);
        backdrop-filter: blur(12px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    /* Table Card */
    .table-card {
        border-radius: 20px;
        overflow: hidden;
        background: white;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    }

    /* Table Header Premium Gradient */
    .table thead {
        background: linear-gradient(135deg, #141e30, #243b55);
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 14px;
        letter-spacing: 0.5px;
    }

    /* Table Hover Animation */
    .table-hover tbody tr {
        transition: 0.3s ease;
    }

        .table-hover tbody tr:hover {
            background-color: #f1f5f9;
            transform: scale(1.01);
        }

    /* Rounded Button */
    .btn-rounded {
        border-radius: 30px;
        padding: 8px 18px;
        font-weight: 500;
    }

    /* Search Button */
    .btn-outline-primary {
        border-radius: 30px;
        transition: 0.3s ease;
    }

        .btn-outline-primary:hover {
            background: linear-gradient(45deg, #0072ff, #00c6ff);
            color: white;
            border: none;
        }

    /* Input Styling */
    .form-control {
        border-radius: 12px;
        border: 1px solid #e5e7eb;
    }

        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(0,114,255,0.2);
            border-color: #0072ff;
        }

</style>

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-header">🚖 Driver Listing</h2>
            <p class="text-muted mb-0">Search and browse registered drivers</p>
        </div>
        <a asp-action="Register" class="btn btn-primary btn-rounded">
            + Register New Driver
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }



    <!-- Search Filter Card -->
    <div class="card filter-card p-4 mb-4">
        <form method="get" class="row g-3">

            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input asp-for="SearchTerm" class="form-control"
                       placeholder="Name, city, email, phone" />
            </div>

            <div class="col-md-3">
                <label class="form-label">City</label>
                <input asp-for="City" class="form-control" placeholder="City" />
            </div>

            <div class="col-md-2">
                <label class="form-label">Min Experience</label>
                <input asp-for="MinExperience" class="form-control"
                       type="number" min="0" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary btn-rounded w-100">
                    Search
                </button>
            </div>

        </form>
    </div>

    <!-- Driver Table -->
    <div class="table-responsive table-card">
        <table class="table table-hover mb-0 align-middle">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>City</th>
                    <th>Experience</th>
                    <th>Contact</th>
                </tr>
            </thead>

            <tbody>
                @if (!Model.Results.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No drivers found.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var driver in Model.Results)
                    {
                        <tr>
                            <td class="fw-semibold">@driver.DriverName</td>
                            <td>@driver.City</td>
                            <td>@driver.Experience years</td>
                            <td>
                                @driver.Mobile <br />
                                <small class="text-muted">@driver.Email</small>
                            </td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>

</div>
