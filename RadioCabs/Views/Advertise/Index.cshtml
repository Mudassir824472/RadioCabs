@model RadioCabs.Models.AdvertisePageViewModel
@{
    ViewData["Title"] = "Advertise";
}

<h2>Advertise</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Index" method="post" class="border rounded p-3 col-lg-8">
    @Html.AntiForgeryToken()
    <div class="mb-2">
        <label>Registered Company</label>
        <select asp-for="CompanyId" class="form-select">
            <option value="">Select a company</option>
            @foreach (var company in Model.Companies)
            {
                <option value="@company.CompanyId">@company.CompanyName (@company.CompanyUniqueId)</option>
            }
        </select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>
    <div class="mb-2"><label>Designation</label><input asp-for="Advertisement.Designation" class="form-control" /></div>
    <div class="mb-2"><label>Description</label><textarea asp-for="Advertisement.Description" class="form-control"></textarea></div>
    <div class="mb-2"><label>Payment Type</label><select asp-for="Advertisement.PaymentType" id="adPaymentType" class="form-select"><option>Monthly</option><option>Quarterly</option></select></div>
    <div class="alert alert-info py-2">Payable amount: <strong id="adAmount">$15</strong></div>
    <p class="text-muted small">Contact details will be pulled from the selected company profile.</p>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const adType = document.getElementById('adPaymentType');
        const adAmount = document.getElementById('adAmount');
        function updateAdAmount() {
            adAmount.textContent = adType.value === 'Quarterly' ? '$40' : '$15';
        }
        adType.addEventListener('change', updateAdAmount);
        updateAdAmount();
    </script>
}
